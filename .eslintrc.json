{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [1, 3],
        "import/no-cycle": 0,
        "import/prefer-default-export": 1,
        "no-underscore-dangle": 0,
        "no-useless-constructor": 0,
        "class-methods-use-this": 0
    }
}